{
    "name": "emmet",
    "displayName": "emmet",
    "description": "Emmet support for VS Code",
    "version": "0.0.1",
    "publisher": "vscode",
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ramya-rao-a/vscode-emmet.git"
    },
    "activationEvents": [
        "onLanguage:html",
        "onLanguage:jade",
        "onLanguage:slim",
        "onLanguage:haml",
        "onLanguage:xml",
        "onLanguage:xsl",
        "onLanguage:css",
        "onLanguage:scss",
        "onLanguage:sass",
        "onLanguage:less",
        "onLanguage:stylus",
        "onLanguage:javascriptreact",
        "onLanguage:typescriptreact"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Emmet configuration",
            "properties": {
                "emmet.suggestExpandedAbbreviation": {
                    "type": "boolean",
                    "default": true,
                    "description": "Shows expanded emmet abbreviations as suggestions"
                },
                "emmet.suggestAbbreviations": {
                    "type": "boolean",
                    "default": true,
                    "description": "Shows possinle emmet abbreviations as suggestions"
                }
            }
        },
        "commands": [
            {
                "command": "emmet.expandAbbreviation",
                "title": "Emmet 2.0 Expand abbreviation",
                "description": "Use the new emmet 2.0 apis to expand given abbreviation"
            },
            {
                "command": "emmet.wrapWithAbbreviation",
                "title": "Emmet 2.0 Wrap with abbreviation",
                "description": "Use the new emmet 2.0 apis to wrap selected text with given abbreviation"
            },
            {
                "command": "emmet.removeTag",
                "title": "Emmet 2.0 Remove Tag",
                "description": "Use the new emmet 2.0 apis to remove tag under the cursor"
            },
            {
                "command": "emmet.updateTag",
                "title": "Emmet 2.0 Update Tag",
                "description": "Use the new emmet 2.0 apis to update tag under the cursor"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "@emmetio/expand-abbreviation": "^0.5.0",
        "@emmetio/extract-abbreviation": "^0.1.1",
        "@emmetio/html-matcher": "^0.3.1"
    }
}